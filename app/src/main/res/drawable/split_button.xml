<!-- res/drawable/split_button.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Left half (Red) -->
    <item android:width="165dp" android:gravity="left">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" /> <!-- Red color -->
        </shape>
    </item>

    <!-- Right half (Blue) -->
    <item android:width="165dp" android:gravity="right">
        <shape android:shape="rectangle">
            <solid android:color="@color/highlight" /> <!-- Blue color -->
        </shape>
    </item>

</layer-list>